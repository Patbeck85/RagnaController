<Window x:Class="RagnaController.NewProfileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Profile"
        Width="400" Height="310"
        Background="{StaticResource BG1Brush}"
        Foreground="{StaticResource TextHiBrush}"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="44"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title bar -->
            <Border Grid.Row="0" CornerRadius="8,8,0,0"
                    Background="{StaticResource HeaderGrad}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1">
                <Grid Margin="14,0">
                    <TextBlock Text="CREATE NEW PROFILE"
                               FontSize="11" FontWeight="Bold"
                               CharacterSpacing="120"
                               Foreground="{StaticResource NeonBrush}"
                               Effect="{StaticResource NeonGlow}"
                               VerticalAlignment="Center"/>
                    <Button Content="âœ•" Width="30" Height="26"
                            HorizontalAlignment="Right"
                            Style="{StaticResource ConsoleDangerBtn}"
                            Padding="0" Click="BtnCancel_Click"/>
                </Grid>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="20,16,20,20">

                <!-- Name -->
                <TextBlock Text="PROFILE NAME" FontSize="9" FontWeight="Bold"
                           CharacterSpacing="150"
                           Foreground="{StaticResource TextLowBrush}"
                           Margin="0,0,0,5"/>
                <Border BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1" CornerRadius="4"
                        Background="{StaticResource BG3Brush}"
                        Margin="0,0,0,14">
                    <TextBox x:Name="TxtName"
                             Background="Transparent"
                             Foreground="{StaticResource TextHiBrush}"
                             BorderThickness="0"
                             Padding="10,9"
                             FontSize="13"
                             CaretBrush="{StaticResource NeonBrush}"
                             Text="My Profile"/>
                </Border>

                <!-- Description -->
                <TextBlock Text="DESCRIPTION (OPTIONAL)" FontSize="9" FontWeight="Bold"
                           CharacterSpacing="150"
                           Foreground="{StaticResource TextLowBrush}"
                           Margin="0,0,0,5"/>
                <Border BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1" CornerRadius="4"
                        Background="{StaticResource BG3Brush}"
                        Margin="0,0,0,14">
                    <TextBox x:Name="TxtDescription"
                             Background="Transparent"
                             Foreground="{StaticResource TextHiBrush}"
                             BorderThickness="0"
                             Padding="10,9"
                             FontSize="13"
                             CaretBrush="{StaticResource NeonBrush}"/>
                </Border>

                <!-- Class -->
                <TextBlock Text="CLASS" FontSize="9" FontWeight="Bold"
                           CharacterSpacing="150"
                           Foreground="{StaticResource TextLowBrush}"
                           Margin="0,0,0,5"/>
                <ComboBox x:Name="CmbClass"
                          Style="{StaticResource ConsoleCombo}"
                          SelectedIndex="0"
                          Margin="0,0,0,20">
                    <ComboBoxItem Content="Melee"/>
                    <ComboBoxItem Content="Ranged"/>
                    <ComboBoxItem Content="Mage"/>
                </ComboBox>

                <!-- Buttons -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Content="CANCEL"
                            Style="{StaticResource ConsoleGhostBtn}"
                            Click="BtnCancel_Click" Padding="0,10"/>
                    <Button Content="CREATE PROFILE"
                            Grid.Column="2"
                            Style="{StaticResource ConsoleFilledBtn}"
                            Click="BtnCreate_Click" Padding="0,10"
                            FontSize="11"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</Window>
