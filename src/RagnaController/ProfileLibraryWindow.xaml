<Window x:Class="RagnaController.ProfileLibraryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Profile Library" Width="850" Height="600"
        Background="{StaticResource BG1Brush}"
        Foreground="{StaticResource TextHiBrush}"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="PROFILE LIBRARY" FontSize="22" FontWeight="Bold"
                       Foreground="{StaticResource NeonBrush}"
                       Effect="{StaticResource NeonGlow}"/>
            <TextBlock x:Name="ProfileCount" Text="4 profiles available"
                       FontSize="11" Foreground="{StaticResource TextLowBrush}"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Profile List -->
        <Border Grid.Row="1" Background="{StaticResource BG2Brush}"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search Bar -->
                <Border Grid.Row="0" Background="{StaticResource BG3Brush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,1" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="SearchBox" Grid.Column="0"
                                 Height="32" Padding="10,6"
                                 TextChanged="SearchBox_TextChanged"
                                 Background="{StaticResource BG2Brush}"
                                 Foreground="{StaticResource TextHiBrush}"
                                 BorderBrush="{StaticResource BorderBrush}"/>
                        
                        <TextBlock Grid.Column="0" Text="ðŸ” Search profiles..."
                                   FontSize="12" Foreground="{StaticResource TextLowBrush}"
                                   IsHitTestVisible="False"
                                   VerticalAlignment="Center" Margin="12,0,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <ComboBox x:Name="FilterCombo" Grid.Column="1"
                                  Width="150" Height="32" Margin="10,0,0,0"
                                  SelectionChanged="FilterCombo_SelectionChanged">
                            <ComboBoxItem Content="All Profiles" IsSelected="True"/>
                            <ComboBoxItem Content="Built-in Only"/>
                            <ComboBoxItem Content="Custom Only"/>
                            <ComboBoxItem Content="Melee"/>
                            <ComboBoxItem Content="Ranged"/>
                            <ComboBoxItem Content="Mage"/>
                            <ComboBoxItem Content="Support"/>
                        </ComboBox>
                    </Grid>
                </Border>

                <!-- Profile Cards -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="ProfilesList" Margin="15">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource BG3Brush}"
                                        BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="1" CornerRadius="6"
                                        Padding="15" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Profile Info -->
                                        <StackPanel Grid.Column="0">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                <TextBlock Text="{Binding Name}" FontSize="16"
                                                           FontWeight="Bold" Foreground="{StaticResource TextHiBrush}"/>
                                                <Border Background="{StaticResource BG4Brush}"
                                                        CornerRadius="3" Padding="6,2" Margin="10,0,0,0"
                                                        Visibility="{Binding IsBuiltIn, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <TextBlock Text="BUILT-IN" FontSize="8" FontWeight="Bold"
                                                               Foreground="{StaticResource NeonDimBrush}"/>
                                                </Border>
                                            </StackPanel>
                                            
                                            <TextBlock Text="{Binding Description}" FontSize="11"
                                                       Foreground="{StaticResource TextLowBrush}"
                                                       TextWrapping="Wrap" Margin="0,0,0,8"/>
                                            
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Class:" FontSize="10"
                                                           Foreground="{StaticResource TextLowBrush}"
                                                           Margin="0,0,6,0"/>
                                                <TextBlock Text="{Binding Class}" FontSize="10"
                                                           FontWeight="Bold" Foreground="{StaticResource TextMidBrush}"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Action Buttons -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <Button Content="Load" Width="90" Margin="0,0,0,8"
                                                    Style="{StaticResource ConsolePrimaryBtn}"
                                                    Click="BtnLoad_Click" Tag="{Binding}"/>
                                            <Button Content="Export" Width="90" Margin="0,0,0,8"
                                                    Style="{StaticResource ConsoleGhostBtn}"
                                                    Click="BtnExport_Click" Tag="{Binding}"/>
                                            <Button Content="Delete" Width="90"
                                                    Style="{StaticResource ConsoleDangerBtn}"
                                                    Click="BtnDelete_Click" Tag="{Binding}"
                                                    Visibility="{Binding IsBuiltIn, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="New Profile" Style="{StaticResource ConsolePrimaryBtn}"
                    Width="120" Margin="0,0,10,0" Click="BtnNew_Click"/>
            <Button Content="Import" Style="{StaticResource ConsoleGhostBtn}"
                    Width="90" Margin="0,0,10,0" Click="BtnImport_Click"/>
            <Button Content="Close" Style="{StaticResource ConsoleGhostBtn}"
                    Width="80" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
